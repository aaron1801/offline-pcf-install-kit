{
  "builders": [{
    "type": "vmware-vmx",
    "source_path": "basebox-ubuntu-16.04-amd64-vmware/basebox-ubuntu-16.04-amd64.vmx",
    "output_directory": "pcfbuild-ubuntu-16.04-amd64-vmware",
    "vm_name": "pcfbuild-ubuntu-16.04-amd64",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "pivotal",
    "ssh_password": "alwaysbekind",
    "shutdown_command": "sudo systemctl poweroff",
    "vmx_data": {
      "memsize": "{{user `memory`}}",
      "numvcpus": "{{user `cpus`}}"
    }
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "../docker-compose.yml",
      "destination": "/home/pivotal/docker-compose.yml"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/ubuntu/docker.sh",
        "scripts/pcfbuild/setup-concourse.sh",
        "scripts/pcfbuild/setup-minio.sh",
        "scripts/pcfbuild/setup-docker-containers.sh",
        "scripts/ubuntu/cleanup.sh",
        "scripts/common/minimize.sh"
      ]
    }
  ],
  "post-processors": [],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "737ae7041212c628de5751d15c3016058b0e833fdc32e7420209b76ca3d0a535",
    "iso_checksum_type": "sha256",
    "memory": "4096",
    "mirror": "http://releases.ubuntu.com",
    "ssh_timeout": "60m"
  }
}
